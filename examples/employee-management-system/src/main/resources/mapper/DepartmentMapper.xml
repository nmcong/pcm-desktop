<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.noteflix.ems.mapper.DepartmentMapper">

    <resultMap id="DepartmentResultMap" type="Department">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="departmentColumns">
        id, name, description, created_at, updated_at
    </sql>

    <select id="findAll" resultMap="DepartmentResultMap">
        SELECT
        <include refid="departmentColumns"/>
        FROM departments
        ORDER BY name
    </select>

    <select id="findById" resultMap="DepartmentResultMap">
        SELECT
        <include refid="departmentColumns"/>
        FROM departments
        WHERE id = #{id}
    </select>

    <select id="findByName" resultMap="DepartmentResultMap">
        SELECT
        <include refid="departmentColumns"/>
        FROM departments
        WHERE name = #{name}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO departments (name, description, created_at, updated_at)
        VALUES (#{name}, #{description}, CURRENT_TIMESTAMP, CURRENT_TIMESTAMP)
    </insert>

    <update id="update">
        UPDATE departments
        SET name = #{name},
        description = #{description},
        updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM departments
        WHERE id = #{id}
    </delete>

    <select id="count" resultType="long">
        SELECT COUNT(*)
        FROM departments
    </select>

</mapper>

