<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<HBox styleClass="top-nav" spacing="12" alignment="CENTER_LEFT" 
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.noteflix.pcm.ui.components.NavbarController">
    
    <padding>
        <Insets top="12" right="20" bottom="12" left="20"/>
    </padding>
    
    <!-- Brand -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
            <image>
                <Image url="@../../images/icons/app-icon.png"/>
            </image>
        </ImageView>
        <Label text="PCM Desktop" styleClass="title-3"/>
    </HBox>
    
    <Region HBox.hgrow="ALWAYS"/>
    
    <!-- Right Actions -->
    <HBox spacing="8" alignment="CENTER_RIGHT">
        <!-- New Screen Button - Accent -->
        <Button onAction="#handleNewScreen" styleClass="accent">
            <graphic>
                <HBox spacing="6" alignment="CENTER">
                    <FontIcon iconLiteral="fth-plus-circle" iconSize="18"/>
                    <Label text="New Screen"/>
                </HBox>
            </graphic>
        </Button>
        
        <!-- Notification Button -->
        <Button onAction="#handleNotifications" styleClass="flat">
            <graphic>
                <FontIcon iconLiteral="fth-bell" iconSize="20"/>
            </graphic>
            <tooltip>
                <Tooltip text="Notifications"/>
            </tooltip>
        </Button>
        
        <!-- Settings Button -->
        <Button fx:id="settingsBtn" onAction="#handleSettings" styleClass="flat">
            <graphic>
                <FontIcon iconLiteral="fth-settings" iconSize="20"/>
            </graphic>
            <tooltip>
                <Tooltip text="Settings"/>
            </tooltip>
        </Button>
    </HBox>
</HBox>
