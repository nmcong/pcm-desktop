<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox styleClass="card" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.noteflix.pcm.ui.components.TagsCardController">
    
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
    
    <Label text="Tags" styleClass="title-4"/>
    
    <FlowPane fx:id="tagsContainer" hgap="8" vgap="8">
        <VBox.margin>
            <Insets top="12"/>
        </VBox.margin>
        
        <!-- Sample Tags -->
        <Button text="Customer" styleClass="accent, rounded">
            <tooltip>
                <Tooltip text="Remove tag"/>
            </tooltip>
        </Button>
        
        <Button text="Dashboard" styleClass="success, rounded">
            <tooltip>
                <Tooltip text="Remove tag"/>
            </tooltip>
        </Button>
        
        <Button text="Priority" styleClass="danger, rounded">
            <tooltip>
                <Tooltip text="Remove tag"/>
            </tooltip>
        </Button>
        
        <Button text="ï¼‹ Add Tag" onAction="#handleAddTag" styleClass="outlined, rounded, small"/>
    </FlowPane>
</VBox>
