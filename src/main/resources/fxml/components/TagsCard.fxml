<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox styleClass="card" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.noteflix.pcm.ui.components.TagsCardController">
    
    <Label text="Tags" styleClass="card-title"/>
    
    <HBox fx:id="tagsContainer" styleClass="tags-list" spacing="8">
        <Label text="Customer" styleClass="tag tag-blue"/>
        <Label text="Dashboard" styleClass="tag tag-purple"/>
        <Label text="Priority" styleClass="tag tag-red"/>
        <Button text="+ Add" styleClass="btn-add-tag" onAction="#handleAddTag"/>
    </HBox>
</VBox>

