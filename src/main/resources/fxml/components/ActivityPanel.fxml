<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox styleClass="card" spacing="12" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.noteflix.pcm.ui.components.ActivityPanelController">
    
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
    
    <Label text="Recent Activity" styleClass="title-4"/>
    
    <VBox spacing="16">
        <!-- Activity 1 -->
        <HBox spacing="10" alignment="TOP_LEFT">
            <StackPane style="-fx-background-color: -color-bg-subtle; -fx-background-radius: 14px;" minWidth="28" minHeight="28" maxWidth="28" maxHeight="28">
                <Label text="JD" style="-fx-font-size: 10px; -fx-font-weight: bold;"/>
            </StackPane>
            <VBox spacing="4" HBox.hgrow="ALWAYS">
                <Label text="John Doe updated description"/>
                <Label text="2 hours ago" styleClass="text-small, text-muted"/>
            </VBox>
        </HBox>
        
        <!-- Activity 2 -->
        <HBox spacing="10" alignment="TOP_LEFT">
            <StackPane style="-fx-background-color: -color-bg-subtle; -fx-background-radius: 14px;" minWidth="28" minHeight="28" maxWidth="28" maxHeight="28">
                <Label text="SK" style="-fx-font-size: 10px; -fx-font-weight: bold;"/>
            </StackPane>
            <VBox spacing="4" HBox.hgrow="ALWAYS">
                <Label text="Sarah Kim added tag"/>
                <Label text="5 hours ago" styleClass="text-small, text-muted"/>
            </VBox>
        </HBox>
        
        <!-- Activity 3 -->
        <HBox spacing="10" alignment="TOP_LEFT">
            <StackPane style="-fx-background-color: -color-bg-subtle; -fx-background-radius: 14px;" minWidth="28" minHeight="28" maxWidth="28" maxHeight="28">
                <Label text="MS" style="-fx-font-size: 10px; -fx-font-weight: bold;"/>
            </StackPane>
            <VBox spacing="4" HBox.hgrow="ALWAYS">
                <Label text="Mike Smith created screen"/>
                <Label text="1 day ago" styleClass="text-small, text-muted"/>
            </VBox>
        </HBox>
    </VBox>
</VBox>
