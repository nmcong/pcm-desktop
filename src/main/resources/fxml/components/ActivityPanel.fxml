<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox styleClass="panel" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.noteflix.pcm.ui.components.ActivityPanelController">
    
    <Label text="Recent Activity" styleClass="panel-title"/>
    
    <VBox styleClass="activity-list" spacing="12">
        <HBox styleClass="activity-item" spacing="10">
            <Label text="JD" styleClass="activity-avatar"/>
            <VBox spacing="2">
                <Label text="John Doe updated description" styleClass="activity-text"/>
                <Label text="2 hours ago" styleClass="activity-time"/>
            </VBox>
        </HBox>
        
        <HBox styleClass="activity-item" spacing="10">
            <Label text="SK" styleClass="activity-avatar"/>
            <VBox spacing="2">
                <Label text="Sarah Kim added tag" styleClass="activity-text"/>
                <Label text="5 hours ago" styleClass="activity-time"/>
            </VBox>
        </HBox>
        
        <HBox styleClass="activity-item" spacing="10">
            <Label text="MS" styleClass="activity-avatar"/>
            <VBox spacing="2">
                <Label text="Mike Smith created screen" styleClass="activity-text"/>
                <Label text="1 day ago" styleClass="activity-time"/>
            </VBox>
        </HBox>
    </VBox>
</VBox>

