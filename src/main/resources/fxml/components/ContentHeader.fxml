<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.noteflix.pcm.ui.components.ContentHeaderController">
    
    <!-- Page Header -->
    <HBox styleClass="card-flat" alignment="CENTER_LEFT" spacing="16">
        <padding>
            <Insets top="16" right="20" bottom="16" left="20"/>
        </padding>
        
        <VBox spacing="4" HBox.hgrow="ALWAYS">
            <Label fx:id="pageTitle" text="Customer Profile Dashboard" styleClass="title-2"/>
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="●" style="-fx-text-fill: -color-success-emphasis; -fx-font-size: 8px;"/>
                <Label fx:id="statusText" text="Active" style="-fx-text-fill: -color-success-emphasis; -fx-font-weight: 500;"/>
                <Label text="•" styleClass="text-muted"/>
                <Label fx:id="metaText" text="Last updated 2h ago" styleClass="text-muted"/>
            </HBox>
        </VBox>
        
        <HBox spacing="8">
            <Button text="Share" onAction="#handleShare"/>
            <MenuButton text="⋮" styleClass="flat">
                <items>
                    <MenuItem text="Edit"/>
                    <MenuItem text="Duplicate"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Export"/>
                    <MenuItem text="Delete"/>
                </items>
            </MenuButton>
        </HBox>
    </HBox>
    
    <!-- Tabs -->
    <TabPane styleClass="floating" tabClosingPolicy="UNAVAILABLE">
        <padding>
            <Insets top="0" right="20" bottom="0" left="20"/>
        </padding>
        
        <Tab text="Overview" onSelectionChanged="#handleTabOverview"/>
        <Tab text="Events" onSelectionChanged="#handleTabEvents"/>
        <Tab text="Source Code" onSelectionChanged="#handleTabSourceCode"/>
        <Tab text="Database" onSelectionChanged="#handleTabDatabase"/>
        <Tab text="API Endpoints" onSelectionChanged="#handleTabAPI"/>
    </TabPane>
</VBox>
