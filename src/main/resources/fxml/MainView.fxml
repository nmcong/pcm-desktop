<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.noteflix.pcm.ui.MainController">

    <!-- Top Navigation Bar -->
    <top>
        <fx:include source="components/Navbar.fxml"/>
    </top>

    <center>
        <HBox styleClass="app-container">
            <!-- Sidebar Navigation -->
            <fx:include source="components/Sidebar.fxml"/>

            <!-- Main Content Area -->
            <VBox fx:id="mainContent" styleClass="content-area" HBox.hgrow="ALWAYS">
                <!-- Content Header with Tabs -->
                <fx:include source="components/ContentHeader.fxml"/>
                
                <!-- Content Body -->
                <ScrollPane styleClass="content-scroll" fitToWidth="true" VBox.vgrow="ALWAYS">
                    <HBox styleClass="content-wrapper">
                        <!-- Main Content -->
                        <VBox styleClass="content-main" HBox.hgrow="ALWAYS">
                            <!-- Stats Cards -->
                            <fx:include source="components/StatsCards.fxml"/>
                            
                            <!-- Description Card -->
                            <fx:include source="components/DescriptionCard.fxml"/>
                            
                            <!-- Tags Card -->
                            <fx:include source="components/TagsCard.fxml"/>
                            
                            <!-- Related Items Card -->
                            <fx:include source="components/RelatedItemsCard.fxml"/>
                        </VBox>
                        
                        <!-- Right Sidebar -->
                        <VBox styleClass="sidebar-right">
                            <!-- Properties Panel -->
                            <fx:include source="components/PropertiesPanel.fxml"/>
                            
                            <!-- Activity Panel -->
                            <fx:include source="components/ActivityPanel.fxml"/>
                        </VBox>
                    </HBox>
                </ScrollPane>
            </VBox>
        </HBox>
    </center>

</BorderPane>
